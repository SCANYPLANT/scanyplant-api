{
    "compilerOptions": {
        "target": "es2017",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "module": "commonjs",
        "lib": [
            "esnext",
            "dom",
            "es6",
            "esnext.asynciterable"
        ],
        "allowJs": false,
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "declaration": true,
        "isolatedModules": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": ".dist",
        "rootDir": "./",
        "baseUrl": "./",
        "paths": {
            "~core/*": [
                "src/core/*"
            ]
        }
    },
    "files": [
        "types.d.ts"
    ],
    "include": [
        "src/**/*.ts",
        "types.d.ts"
    ],
    "exclude": [
        "node_modules",
        ".eslintrc.js",
        ".jestrc.js",
        "babel.config.js",
        "prettier.config.js",
        "ormconfig"
    ]
}
